#!/bin/bash
# lol: laugh out loud (sample BASH skeleton to use as a basis for BASH scripts)

#===============================================================================
# usage: $ lol -?
#        $ lol --help
#===============================================================================

if [ "$*" == "-?" ] || [ "$*" == "--help" ]; then
    echo "usage: lol         # laugh out loud"
    echo "       lol -?      # help with usage"
    echo "       lol --help  # help with usage"
    exit 0
fi

#===============================================================================
# default: laugh out loud
#===============================================================================

if [ "$*" == "" ]; then
    printf "\x1b[36m"  # cyan
    echo "hahaha haha hahahaha"
    printf "\x1b[0m"   # neutral
fi
